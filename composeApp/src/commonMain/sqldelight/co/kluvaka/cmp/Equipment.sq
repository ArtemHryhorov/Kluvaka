CREATE TABLE Equipment(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    image TEXT,
    price REAL NOT NULL
);

getEquipmentById:
SELECT * FROM Equipment WHERE id = :id;

selectAllEquipment:
SELECT * FROM Equipment;

insertEquipment:
INSERT INTO Equipment(id, title, image, price) VALUES (?, ?, ?, ?);

deleteEquipment:
DELETE FROM Equipment WHERE id = ?;