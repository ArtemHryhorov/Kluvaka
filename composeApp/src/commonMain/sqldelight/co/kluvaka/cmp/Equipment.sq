CREATE TABLE Equipment(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    images TEXT,
    price REAL NOT NULL
);

getEquipmentById:
SELECT * FROM Equipment WHERE id = :id;

selectAllEquipment:
SELECT * FROM Equipment;

insertEquipment:
INSERT INTO Equipment(id, title, images, price) VALUES (?, ?, ?, ?);

deleteEquipment:
DELETE FROM Equipment WHERE id = ?;

updateEquipment:
UPDATE Equipment
SET title = :title,
    images = :images,
    price = :price
WHERE id = :id;